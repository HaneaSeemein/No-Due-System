<%- include("partials/header_department"); -%>
    <div class="container" style="padding-top: 50px;">
        <h2>
            <%=purpose%>
        </h2>
        <h1></h1>
        <form name="<%=purpose%>_form" class="form-horizontal" onsubmit="return <%=purposefunction%>()">
            <div class="form-group">
                <label class="control-label col-sm-2" for="srn">Student SRN:</label>
                <div class="col-sm-10">
                    <input type="srn" class="form-control" id="srn" placeholder="Enter Student SRN" name="srn">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="amt"><%=Inputdep%>(in INR):</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="amt" placeholder="ex. 500" name="amt">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default">Submit</button>
                </div>
            </div>
        </form>
    </div>
    <%- include("footer"); -%>