<%- include("partials/header_department"); -%>
<div class="container" style="padding-top: 50px;">
  <h2>
    Impose Due
  </h2>
  <h1></h1>
  <form name="Impose_due_form" class="form-horizontal" method="post"> 
    <div class="form-group">
      <label class="control-label col-sm-2" for="srn">Student SRN:</label>
      <div class="col-sm-10">
        <input type="srn" class="form-control" id="srn" placeholder="Enter Student SRN" name="SRN">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="purpose">Purpose:</label>
      <div class="col-sm-10">
        <input type="srn" class="form-control" id="purpose" placeholder="ex. fine" name="purpose">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="amt" >Charged Amount(in INR):</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="amt" placeholder="ex. 500" name="amt">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </div>
  </form>
</div>
<%- include("partials/footer"); -%>