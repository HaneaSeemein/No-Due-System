<%- include("partials/header_login"); -%>
<div class="container" style="padding-top: 50px;">
  <h2><%=loginas%> Login</h2>
  <h1></h1>
  <form name="login_form" class="form-horizontal" onsubmit="return login_as_<%=loginas%>()" method='post'>
    <div class="form-group">
      <label class="control-label col-sm-2" for="srn"><%=loginID%></label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="loginID" placeholder="Enter SRN" name="loginID">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="pwd">Password:</label>
      <div class="col-sm-10">
        <input type="password" class="form-control" id="pwd" placeholder="Enter password" name="pwd">
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
      </div>
  </form>
</div>
<%- include("partials/footer"); -%>